{
  "name": "andrelandgraf",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "fmt": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "build": "run-s \"build:*\"",
    "build:remix": "remix vite:build",
    "build:schema": "drizzle-kit generate",
    "update:articles": "NODE_ENV=development TZ=Etc/UTC tsx --env-file=.env scripts/articles.ts",
    "sentry:build": "sentry-upload-sourcemaps && rm ./public/**/*.map && rm ./build/**/*.map",
    "dev": "NODE_ENV=development TZ=Etc/UTC tsx --env-file=.env ./server/index.ts",
    "start": "NODE_ENV=production TZ=Etc/UTC tsx ./server/index.ts"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2
  },
  "dependencies": {
    "@markdoc/markdoc": "^0.4.0",
    "@react-three/drei": "^9.90.2",
    "@react-three/fiber": "^8.15.12",
    "@remix-run/express": "^2.15.2",
    "@remix-run/node": "^2.15.2",
    "@remix-run/react": "^2.15.2",
    "@remix-run/server-runtime": "^2.15.2",
    "@resvg/resvg-js": "^2.6.2",
    "@sentry/node": "^8.48.0",
    "@sentry/remix": "^8.48.0",
    "better-sqlite3": "^11.3.0",
    "clsx": "^2.1.1",
    "compression": "^1.7.4",
    "drizzle-orm": "^0.36.0",
    "express": "^4.19.2",
    "isbot": "^4.1.0",
    "js-yaml": "^4.1.0",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "posthog-js": "^1.161.3",
    "posthog-node": "^4.2.0",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "satori": "^0.12.1",
    "sharp": "^0.33.5",
    "shiki": "^1.26.2",
    "three": "^0.159.0",
    "tiny-invariant": "^1.3.3",
    "tsx": "^4.19.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.8",
    "@remix-run/dev": "^2.15.2",
    "@sentry/vite-plugin": "^2.23.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.8",
    "@types/morgan": "^1.9.9",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/three": "^0.165.0",
    "@types/ws": "^8.5.8",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^5.2.13",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
