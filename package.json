{
  "name": "andrelandgraf",
  "sideEffects": false,
  "type": "module",
  "packageManager": "bun@1.2.3",
  "scripts": {
    "fmt": "bunx --bun prettier --write .",
    "typecheck": "bunx --bun tsc --noEmit",
    "build": "bunx --bun next build",
    "build:legacy": "bunx --bun remix vite:build",
    "db:generate": "bunx --bun drizzle-kit generate",
    "db:migrate": "bunx --bun drizzle-kit migrate",
    "db:studio": "bunx --bun drizzle-kit studio",
    "db:seed": "NODE_ENV=development TZ=Etc/UTC bun run scripts/db-seed.ts",
    "update:articles": "bun run db:seed",
    "env:pull": "better-env pull --environment development",
    "env:push": "better-env load .env.development --environment development --upsert",
    "env:pull:preview": "better-env pull --environment preview",
    "env:push:preview": "better-env load .env.preview --environment preview --upsert",
    "env:pull:prod": "better-env pull --environment production",
    "env:push:prod": "better-env load .env.production --environment production --upsert",
    "env:validate": "better-env validate --environment development",
    "env:validate:prod": "better-env validate --environment production",
    "prebuild": "bun run env:validate:prod",
    "sentry:build": "sentry-upload-sourcemaps && rm ./public/**/*.map && rm ./build/**/*.map",
    "dev": "NODE_ENV=development TZ=Etc/UTC bunx --bun next dev",
    "dev:legacy": "NODE_ENV=development TZ=Etc/UTC bun run ./server/index.ts",
    "start": "NODE_ENV=production TZ=Etc/UTC bunx --bun next start",
    "start:legacy": "NODE_ENV=production TZ=Etc/UTC tsx ./server/index.ts"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2
  },
  "dependencies": {
    "@markdoc/markdoc": "^0.4.0",
    "@neondatabase/serverless": "^1.0.2",
    "@react-three/drei": "^9.90.2",
    "@react-three/fiber": "^8.15.12",
    "@remix-run/express": "^2.15.2",
    "@remix-run/node": "^2.15.2",
    "@remix-run/react": "^2.15.2",
    "@remix-run/server-runtime": "^2.15.2",
    "@resvg/resvg-js": "^2.6.2",
    "@sentry/nextjs": "^10.38.0",
    "@sentry/node": "^8.48.0",
    "@sentry/remix": "^8.48.0",
    "@vercel/functions": "^3.4.1",
    "better-env": "^0.3.1",
    "better-sqlite3": "^11.3.0",
    "clsx": "^2.1.1",
    "compression": "^1.7.4",
    "drizzle-orm": "^0.36.0",
    "express": "^4.19.2",
    "isbot": "^4.1.0",
    "js-yaml": "^4.1.0",
    "morgan": "^1.10.0",
    "next": "^14.2.32",
    "openimg": "^0.7.0",
    "pg": "^8.18.0",
    "posthog-js": "^1.161.3",
    "posthog-node": "^4.2.0",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "satori": "^0.12.1",
    "sharp": "^0.33.5",
    "shiki": "^1.26.2",
    "three": "^0.159.0",
    "tiny-invariant": "^1.3.3",
    "tsx": "^4.19.2",
    "vercel": "^50.14.0",
    "ws": "^8.14.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.8",
    "@next/env": "^14.2.35",
    "@remix-run/dev": "^2.15.2",
    "@sentry/vite-plugin": "^2.23.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.1",
    "@types/pg": "^8.16.0",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/three": "^0.165.0",
    "@types/ws": "^8.5.8",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.27.1",
    "postcss": "^8.5.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^5.2.13",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
